{
  "compilerOptions": {
    "module": "esnext",
    "lib": [
      "esnext"
    ],
    "baseUrl": "./src",
    "target": "es2020",
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitOverride": true,
  },
  "include": ["src/"]
}
